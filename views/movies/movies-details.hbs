<img src="{{movie.image}}">
<a href="/movies">Go back</a>
<h1>{{movie.title}}</h1>
<h2>{{movie.director}}</h2>
<h3>Stars:</h3>
    <ul>{{#each movie.stars}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
<p>{{movie.description}}</p>
<p>
    {{#each movie.showtimes}}
        {{this}} | 
    {{/each}}
</p>

